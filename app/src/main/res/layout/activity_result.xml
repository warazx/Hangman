<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_won"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.christiankarlsson.hangman.ui.ResultActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/hang10"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/hang_img" />

    <TextView
        tools:text="@string/result_victory_text"
        android:textSize="32dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/hang_img"
        android:paddingTop="20dp"
        android:id="@+id/victory_text" />

    <TextView
        tools:text="SECRETWORD"
        android:textSize="32dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/victory_text"
        android:paddingTop="20dp"
        android:id="@+id/secret_word_text" />

    <Button
        android:text="@string/result_back_to_menu_btn_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/secret_word_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:id="@+id/returnToStartButton"
        android:onClick="returnToMenu"/>

</RelativeLayout>
